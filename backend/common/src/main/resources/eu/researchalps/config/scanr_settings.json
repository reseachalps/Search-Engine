        "french_stop": {
          "type": "stop",
          "stopwords": "_french_"
        },
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "italian_stop": {
          "type":       "stop",
          "stopwords":  "_italian_"
        },
        "german_stop": {
          "type": "stop",
          "stopwords": "_german_"
        },
        "complete_elision": {
          "type": "elision",
          "articles_case": true,
          "articles": [
            "agl", "all", "c", "coll", "d", "dagl", "dall", "degl", "dell", "gl", "j", "jusqu", "l", "lorsqu", "m", "n", "negl", "nell", "pell", "puisqu", "qu", "quoiqu", "s", "sugl", "sull", "t", "un", "v"
          ]
        },
        "num": {
          // remove nums
          "type": "pattern_replace",
          "pattern": "^\\d+\\.?\\d*$"
        },
        "flength": {
          "type": "length",
          "min": 2
        }
      },
      "analyzer": {
        "text": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "word_del",
            "complete_elision",
            "lowercase",
            "french_stop",
            "english_stop",
            "italian_stop",
            "german_stop",
            "asciifolding",
            "english_stemmer"
          ]
        },
        "word_cloud": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "word_del",
            "complete_elision",
            "lowercase",
            "my_stop",
            "french_stop",
            "english_stop",
            "italian_stop",
            "german_stop",
            "asciifolding",
            "num",
            "flength",
            "english_stemmer"
          ]
        },
        "exact_match": {
          "type": "simple"
        },
        "domain": {
          "type": "custom",
          "tokenizer": "domain_tokenizer",
          "filter": [
            "lowercase"
          ]
        },
        "structure_name": {
          "type": "custom",
          "tokenizer": "non_alnum_tokenizer",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      },
      "tokenizer": {
        "non_alnum_tokenizer": {
          "type": "pattern",
          "pattern": "(?U)[^\\p{Alnum}]",
          "group": -1,
          "flags": ""
        },
        "domain_tokenizer": {
          "type": "path_hierarchy",
          "delimiter": ".",
          "reverse": true
        }
      }
    }
