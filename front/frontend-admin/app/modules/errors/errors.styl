.errors-container{
  .loading{
    padding-top: 100px;
  }
  .stack-container{
    max-height: 150px;
    overflow: hidden;
    margin-bottom: 20px;
    &.display-full{
      max-height:none;
      padding-bottom: 0;
      overflow: visible;
    }
    &:focus{
      outline: 0;
    }
  }
  md-select-value{
    min-width: 300px;
  }
  ng-message{
    color: #b71c1c;
  }
}