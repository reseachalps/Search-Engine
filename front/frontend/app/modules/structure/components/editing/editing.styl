panel-padding = 5

div[editing]{
  position: relative
  .edit-panel{
    position: absolute
    transition: opacity 0.2s ease-in-out;
    top:panel-padding px
    right:panel-padding px
    left: panel-padding px
    bottom: 0
    background-color: rgba(green,20%)
    border-radius: 15px;
    border: 3px dashed darkgreen
    opacity: 0.5
    z-index: 10000
    &:hover{
      background-color: rgba(green,30%)
    }
    &.ng-hide{
      opacity:0
    }
    &.first, &.full{
      left: (panel-padding - 20) px
    }
    &.last, &.full{
      right: (panel-padding - 20) px
    }
  }
}

md-dialog{
  &.simple-dialog {
    md-dialog-content {
      position: relative
      .message {
        position: absolute;
        left: 0;
        right: 0;
        top: 0
        padding: 10px 20px;
        &.ok {
          background-color: #dff0d8;
          color: #3c763d;
        }
        &.error {
          background-color: #f2dede;
          color: #a94442;
        }
      }
      md-input-container {
        margin-bottom: 0
      }
    }
    md-dialog-actions{
      i.fa{
        display: none
        &.display{
          display: inline-block
        }
      }
    }
  }
}