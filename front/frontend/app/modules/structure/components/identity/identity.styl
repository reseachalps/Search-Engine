@require '../../../../assets/variables.styl';

identity{
  display: block
  padding-top: 30px !important;
  .id-container{
    padding-top: 20px;
    .logo-container {
      padding-right: 20px
      text-align: center
      img {
        max-height: 70px
        max-width: 100%
      }
    }
    h1, h3 {
      color: color-primary
      margin: 0 0 5px 0;
    }
    .subtitle{
      font-size:smaller;
      margin-bottom:5px;
      .label{
        text-align: right;
        display: inline-block
        margin-right: 10px
      }
      .left-part{
        .label{
          min-width: 130px;
        }
      }
      .right-part{
        .label{
          min-width: 190px;
        }
      }
    }
  }
  .geo, .peoples, .web {
    h3 {
      text-align: center
    }
  }
  .geo {
    .map-container {
      text-align: center
      svg {
        width: 60%
        height: 100%;
        max-height: 150px;
        &:hover circle{
          r: 10;
          transition: 0.5s;
        }
        circle{
          transition: 0.5s;
        }
      }
    }
    p{
      font-size: small
      text-align: center
    }
  }
  .web {
    i.fa{
      margin-right: 10px
    }
    .website{
      i.fa,  a {
        vertical-align: middle
      }
      a {
        width: calc(100% - 40px);
        vertical-align: middle;
        text-decoration: underline
        color: grey
        font-size: smaller;
        word-wrap: break-word;
        &:hover {
          color: color-primary
        }
      }
    }
    .website-info{
      small{
        color: color-primary
      }
    }
    h5{
      margin-top: 10px
      margin-bottom: 5px
      display: inline-block;
    }
    .socials{
      a{
        text-decoration: none
        img{
          margin-right: 10px
          width:50px
        }
      }
      .social-networks{
        margin-bottom: 5px
      }
    }
    .technical{
      > p{
        text-decoration: underline
      }
      .fa-check{
        color: #4CAF50
      }
      a{
        word-break: break-word;
        color: grey
        &:hover{
          color: color-primary
        }
      }
      i.fa{
        margin-right: 5px
      }
    }
  }
  .tag-cloud{
    h3{
      margin-bottom: 0
    }
  }
  .tags{
    margin-bottom: 20px
    h3{
      margin-top: 10px
    }
    img{
      max-height: 80px
      margin-right: 10px
    }
  }
  .identity-sections{
    > div {
      &.hierarchy{
        h3{
          text-align: center
          color: color-secondary
        }
        .children-container {
          height: 400px
          relative {
            display: inline-block
            width: 49%
          }
        }
      }
      &.history{
        .history-entry{
          margin: 10px 0
        }
      }
      &.tutelles{
        a{
          color: color-primary
        }
      }
      &.relations {
        a {
          color: color-secondary
          text-decoration: underline
          font-weight: normal
          span {
            color: black
            text-decoration: none
            display: inline-block
            font-weight: bold
          }
        }
      }
      &.themes{
        a{
          color: color-primary
        }
      }
    }
  }
}