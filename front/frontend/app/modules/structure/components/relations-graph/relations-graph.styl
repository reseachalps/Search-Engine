@require '../../../../assets/variables.styl'


relations-graph {
  position: relative
  h2{
    margin-bottom: 0
  }
  .graph-legend{
    position: absolute
    bottom: 10px;
    left: 40px;
    .legend-color{
      font-size:small
      position: relative
      color: #999
      &:before{
        display: block
        content: '';
        position: absolute
        left: -20px
        height: 10px
        width: 10px
        //border: 2px solid #111;
        top: 3px
      }
      &.current{
        &:before{
          background-color: rgba(#388E4F, 0.8)
        }
      }
      &.private{
        &:before{
          background-color: color-secondary
        }
      }
      &.public{
        &:before{
          background-color: color-private
        }
      }
      &.unknown {
        &:before {
          background-color: color-unknown
        }
      }
    }
  }
  .graph-details{
    padding: 20px 20px 90px 20px;
    border: 1px solid #E6E7F8;
    background-color: #F9F9FF;
    width: 400px;
    min-height: 410px;
    box-sizing: border-box;
    position: relative
    a{
      &.public{
        color: color-secondary
      }
      &.private{
        color: color-private
      }
      &.unknown{
        color: color-unknown
      }
    }
    .own-struct{
      struct-label{
        color: #388E4F
      }
    }
  }
  .graph-container {
    min-height: 400px;
    svg {
      overflow: visible
      .node circle {
        stroke: #fff;
        stroke-width: 1.5px;
        cursor: pointer
        &.relation {
          &.public:hover {
            fill: color-primary !important
          }
          &.private:hover {
            fill: darkred !important
          }
        }
        &:hover{
          fill: darkgreen !important
        }
      }

      .link {
        stroke: #aaa;
        stroke-opacity: .6;
        fill: none;
      }
      text {
        cursor: pointer
        fill: black
        -webkit-font-smoothing: auto;
        font-size: 15px;
        stroke: white;
        stroke-width: 0.5px;
        font-weight: bold;
      }
    }
  }
  .list-view{
    margin-top: 0.5em;
    max-height: 400px;
    overflow-y: scroll
    overflow-x: hidden
    padding-right: 20px;
    table {
      border-collapse: collapse;
      width: 100%;
      th {
        border: 1px solid lightgray;
        padding: 0.5em;
        background-color: rgb(250, 250, 250);
      }
      td {
        text-align: center;
        border: 1px solid lightgray;
        padding: 0.4em;
        &.structure-label {
          text-align: left;
        }
      }
    }
    a{
      &.public{
        color: color-secondary
      }
      &.private{
        color: color-private
      }
      &.unknown{
        color: color-unknown
      }
    }
  }
}