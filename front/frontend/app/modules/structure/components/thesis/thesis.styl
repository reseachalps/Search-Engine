@require '../../../../assets/variables.styl'

thesis{
  .left-part{
    width:400px;
  }
  md-autocomplete {
    margin-bottom: 15px
  }
  .count {
    font-size: small;
    color: grey;
  }
  md-virtual-repeat-container{
    height: 400px
    width: 400px
    border:1px solid lightgrey
    .header{
      background-color: color-primary
      color: white
      text-align: center
      padding:10px
    }
    .thesis{
      border-bottom:1px solid lightgray
      color: grey
      cursor: pointer
      padding:20px
      &.selected, &:hover{
        background-color: #F0FAFF
      }
      .publi-meta{
        margin-top: 10px
      }
    }
  }
  .selected-thesis{
    padding: 0 20px
    h3{
      margin: 0 0 10px 00
    }
    p{
      &.subtitle{
        margin-top: 0
        margin-bottom: 20px
        font-size:small
        color: grey
      }
      &.description{
        color: #555
      }
    }
    a{
      color: color-primary
      &.author{
        color: black
        text-decoration: none
        &:hover{
          text-decoration: underline
        }
      }
    }
  }
}